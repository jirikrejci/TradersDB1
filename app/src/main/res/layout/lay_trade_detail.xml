<?xml version="1.0" encoding="utf-8"?>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
                               tools:context="com.JKSoft.TdbClient.actTradeDetail">


<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:columnOrderPreserved="false"
    android:columnCount="6"
>



    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symbol:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level:"/>


    <TextView
        android:layout_column="1"
        android:id="@+id/tvLevelPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:text="x.xxxx"/>

    <TextView
        android:layout_column="2"
        android:id="@+id/tvDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="buy"/>


    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level dist:"/>


    <TextView
        android:layout_column="1"
        android:id="@+id/tvLevelDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+xxx"
        android:paddingStart="0dp"
        />

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETS:"/>




    <TextView
        android:layout_column="1"
        android:id="@+id/tvEstimatedTradeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TS_xxxx"

        android:paddingStart="0dp"/>


    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TP prop."/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvTpProposed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TP man."/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvTpManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xxxx"/>



    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SL:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xxxx"/>


    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SL pips:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvSlPips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SL money:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvSlMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RRR plan.:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvRrrPlanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x.xxxx"/>



    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Status:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvOrderNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"/>


    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trade ID:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvTradeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"/>

    <TextView
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record status:"/>

    <TextView
        android:layout_column="1"
        android:id="@+id/tvTradeRecordStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"/>


    </GridLayout>


</ScrollView>





